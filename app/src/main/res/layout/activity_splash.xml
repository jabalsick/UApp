<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_blue"
    tools:context="com.diegoblajackis.uapp.ui.activities.SplashActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/camera_size"
        android:layout_height="@dimen/camera_size"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_horseshoe"
        android:alpha="0"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_below="@+id/flash2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_photo"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/camera"
        android:layout_width="@dimen/camera_size"
        android:layout_height="@dimen/camera_size"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_polaroid"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/flash2"
        android:layout_width="@dimen/flash_size"
        android:layout_height="@dimen/flash_size"
        android:layout_alignStart="@+id/flash1"
        android:layout_alignTop="@+id/camera"
        android:layout_marginStart="41dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_exploding" />


    <ImageView
        android:id="@+id/flash1"
        android:layout_width="@dimen/flash_size"
        android:layout_height="@dimen/flash_size"
        android:layout_alignBottom="@+id/flash2"
        android:layout_alignEnd="@+id/photo"
        android:layout_marginBottom="58dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_exploding" />

    <View
        android:id="@+id/flash3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="@android:color/white" />

</RelativeLayout>


